#!/bin/bash

if test -r ~/.config/dotfiles/config.sh; then
    test -z "$GITUSER" && source ~/.config/dotfiles/config.sh
else
    echo "Dotfiles configuration file does not exist (~/.config/dotfiles/config.sh)."
    echo "Some things from Dotfiles may not work."
fi

pathappend() {
  declare arg
  for arg in "$@"; do
    test -d "${arg}" || continue
    PATH=${PATH//:${arg}:/:}
    PATH=${PATH/#${arg}:/}
    PATH=${PATH/%:${arg}/}
    export PATH="${PATH:+"${PATH}:"}${arg}"
  done
}

pathprepend() {
  for ARG in "$@"; do
    test -d "${ARG}" || continue
    PATH=${PATH//:${ARG}:/:}
    PATH=${PATH/#${ARG}:/}
    PATH=${PATH/%:${ARG}/}
    export PATH="${ARG}${PATH:+":${PATH}"}"
  done
}

# remember last arg will be first in path
pathprepend \
  $HOME/.local/bin/simple-zet \
  $HOME/.dotfiles/scripts

test -r ~/.dotfiles/shell.d/bash_aliases && source ~/.dotfiles/shell.d/bash_aliases

